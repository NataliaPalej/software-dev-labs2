package agile;
import java.util.Scanner;
public class Encrypt {

	public static void main(String[] args) {
		Scanner in = new Scanner(System.in);
		
		try{
			System.out.print("Enter 4-digit number: ");
			int digits = in.nextInt();
			
			if(validInput(digits)){
				digits = addSeven(digits);
			}
			else{
				System.out.println("Invalid Input");
			}
		} catch (Exception e) {
			System.out.println("Error: " + e);
		}
		in.close();
	}
	
	public static boolean validInput(int digits){
		boolean result = true;
		if (digits < 4 || digits > 0) {
			return result;
		}
		else {
			result = false;
			return result;
		}
	}
	
	public static int swapDigits(int digits){
		while (digits > 0) {
			System.out.println(digits%10);
			digits = digits/10;
		}
		return digits;
	}
	
	public static int addSeven(int digits){
		for (int i = 0; i <= 4; i++) {
			int newDigits = (digits+7) % 10;
			return newDigits;
		}
		return digits;
	}

}
